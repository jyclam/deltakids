	</div>
	<!-- Start Contents -->

	<!-- Start Calendar -->
	<div class="col-sm-8">
		<div class="row">
			<div class="thumbnail">
				<div class="caption-full">
					<h4 style="text-align:center;"><a href="#">ACTIVITIES CALENDAR</a></h4>
				</div>
					<%= month_calendar events: @events do |date, events| %>
					<%= date.day %>
					<% events.each do |event| %>
						<div>
							<% link_name = event.name %>
							<% if link_name.length > 7 %>
								<% link_name = link_name.first(7) + '...' %>
							<% end %>
							<%= link_to(link_name, sport_path(event)) %>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
		<!--S Featured  -->
		<h3>Featured</h3>
		<div class="row">
			<div class="thumbnail">
				<%= image_tag 'outdoors.jpg', class: 'img-responsive' %>
				<div class="caption-full">
					<% feature1 = @features.first %>
					<h4><%= link_to feature1.name, sport_path(feature1.id) %>
					</h4>

					<div class="activity-info">
						<%= image_tag 'icons/clock.png', :class=> "icon" %>12:00pm
						<%= image_tag 'icons/baby.png', :class=> "icon" %><%= feature1.age_group.name %>
						<%= image_tag 'icons/tag.png', :class=> "icon" %><%= feature1.cost %>
						<%= image_tag 'icons/marker.png', :class=> "icon" %><%= feature1.city %>
					</div>
					<p><%= feature1.description%> <%= feature1.more_info %></p>
					<p class="text-right"><a href="">Learn More</a></p>
					<p></p>
				</div>
			</div>
		</div>
		<!-- Start Upcoming -->
		<h3>Upcoming</h3>
		<div class="row">
			<div class="thumbnail">
				<% feature2 = @features.second %>
				<%= image_tag 'rollerblade.jpg', class: 'img-responsive' %>
				<div class="caption-full">
					<h4><%= link_to feature2.name, sport_path(feature2.id) %>
					</h4>

					<div class="activity-info">
