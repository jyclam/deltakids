						<%= image_tag 'icons/baby.png', :class=> "icon" %><%= feature2.age_group.name %>
						<%= image_tag 'icons/tag.png', :class=> "icon" %><%= feature2.cost %>
						<%= image_tag 'icons/marker.png', :class=> "icon" %><%= feature2.city %>
					</div>

					<p><%= feature2.description %> <%= feature2.more_info %></p>
					<p class="text-right"><a href="">Learn More</a></p>
					<p></p>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="thumbnail">
				<%= image_tag 'dance.jpg', class: "img-responsive" %>
				<div class="caption-full">
					<% feature3 = @features.third %>
					<h4><%= link_to feature3.name, sport_path(feature3.id) %>
					</h4>

					<div class="activity-info">
						<%= image_tag 'icons/clock.png', :class=> "icon" %>9:00pm
						<%= image_tag 'icons/baby.png', :class=> "icon" %><%= feature3.age_group.name %>
						<%= image_tag 'icons/tag.png', :class=> "icon" %><%= feature3.cost %>
						<%= image_tag 'icons/marker.png', :class=> "icon" %><%= feature3.city %>
					</div>

					<p><%= feature3.description %><%= feature3.more_info %></p>
					<p class="text-right"><a href="">Learn More</a></p>
					<p></p>
				</div>
			</div>
		</div>

	</div>
</div>
